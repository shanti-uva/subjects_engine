          if parent_relation_counts.length + child_relation_counts.length > 0 %>
        <p>
        <%=    link_to ts('tree.expand', :what => t('all.these')), '#', onclick: "expand_all()", :class => "expand-all expandable-link-contracted", :style => "font-weight:bold;font-variant:small-caps;" %>
        <%=    link_to ts('tree.collapse', :what => t('all.these')), '#', onclick: "collapse_all()", :class => "collapse-all expandable-link-expanded", :style => "font-weight:bold;font-variant:small-caps;display:none;" %>
        </p>
        <div class="subjects-in-subjects kmaps-list-columns related-features has-ajax-pagination has-hash-feature-links">
          <h6><%= fname_labels(@feature).s %></h6>
          <%   parent_relation_counts.each do |rc|
            feature_relation_type = rc.feature_relation_type
            count = rc.count.to_i
            div_id = "list_#{feature_relation_type.id}_0" %>
          <h6><%= link_to feature_relation_type.asymmetric_label.capitalize, related_list_feature_path(@feature.id, :feature_relation_type_id => feature_relation_type.id, :feature_is_parent => 0), :remote => true, :id => "link_#{div_id}", :class => 'expandable-link-contracted' %></strong> (<%= count %>):</h6>
          <div id="<%= div_id %>" style="display:none;" class="related-feature-list pagination-click-results"></div>
          <%=    javascript_tag("$('#link_#{div_id}').bind('ajax:beforeSend', function(){ if(!on_click('#{div_id}')) return false; });") %>
        <%   end %>
        <%   child_relation_counts.each do |rc|
          feature_relation_type = rc.feature_relation_type
          count = rc.count.to_i
          div_id = "list_#{feature_relation_type.id}_1" %>
          <div class="feature-block">
        <p><strong><%= link_to feature_relation_type.label.capitalize, related_list_feature_path(@feature.id, :feature_relation_type_id => feature_relation_type.id, :feature_is_parent => 1), :remote => true, :id => "link_#{div_id}", :class => 'expandable-link-contracted' %></strong> (<%= count %>):</p>
        <div id="<%= div_id %>" style="display:none;" class="related-feature-list pagination-click-results"></div>
        <%=    javascript_tag("$('#link_#{div_id}').bind('ajax:beforeSend', function(){ if(!on_click('#{div_id}')) return false; });") %>
      <%   end %>
          </div> <!-- END - feature-block -->
        <br />
        <p>
        <%= link_to ts('tree.expand', :what => t('all.these')), '#', onclick: "expand_all()", :class => "expand-all expandable-link-contracted", :style => "font-weight:bold;font-variant:small-caps;" %>
        <%= link_to ts('tree.collapse', :what => t('all.these')), '#', onclick: "collapse_all()", :class => "collapse-all expandable-link-expanded", :style => "font-weight:bold;font-variant:small-caps;display:none;" %>
        </p>
      <% else %>
        <p><%= ts 'snippet.feature.not.related' %></p>
      <% end %>
        </div> <!-- END panel-body -->
      </section> <!-- END panel -->
    </div>
    <div role="tabpanel" class="tab-pane" id="relation_tree">
      <section class="panel panel-content">
        <div class="panel-body">
          <h3>Hierarchy tree</h3>
          <div id='relation_tree_container'></div>
        </div> <!-- END panel-body -->
      </section> <!-- END panel -->
    </div>
  </div> <!-- Tab Panes end -->
</div> <!-- myTabs end -->

